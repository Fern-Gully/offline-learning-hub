<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>LAN Arcade</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <style>
    :root{
      --bg:#0b1022;
      --bg2:#0e1533;
      --card:#141a2a;
      --stroke:#1e2544;
      --accent:#3b82f6;
      --accent-2:#8b5cf6;
      --muted:#9aa4b2;
      --fg:#e6e9ef;
      --glass:rgba(255,255,255,0.06);
    }

    *{box-sizing:border-box}
    html,body{height:100%}
    body{
      margin:0;color:var(--fg);font:16px/1.6 system-ui,Segoe UI,Helvetica,Arial,sans-serif;
      background:
        radial-gradient(1200px 600px at 10% -10%, rgba(59,130,246,.20), transparent 60%),
        radial-gradient(1000px 600px at 110% 20%, rgba(139,92,246,.18), transparent 60%),
        linear-gradient(180deg, var(--bg), var(--bg2));
      background-attachment: fixed;
      overflow-y:auto;
    }

    header{
      padding:1.25rem 1rem;border-bottom:1px solid var(--stroke);
      text-align:center;font-weight:800;letter-spacing:.02em;
      position:sticky;top:0;backdrop-filter:saturate(140%) blur(6px);
      background:linear-gradient(to right, rgba(20,26,42,.6), rgba(20,26,42,.35));
      z-index:10;
      animation: drop-in .5s ease-out both;
    }

    .wrap{padding:1.25rem;max-width:1100px;margin:0 auto;animation: fade-up .6s .08s both}
    .grid{display:grid;grid-template-columns:repeat(auto-fill,minmax(220px,1fr));gap:1rem}

    a.card{
      display:block;padding:1rem;background:linear-gradient(180deg,var(--card),rgba(20,26,42,.85));
      border:1px solid var(--stroke);border-radius:14px;text-decoration:none;color:inherit;
      position:relative;isolation:isolate;
      transition:transform .18s ease, border-color .18s ease, box-shadow .18s ease, background .18s ease;
      box-shadow: 0 0 0 rgba(0,0,0,0);
      outline: none;
    }
    a.card:hover, a.card:focus-visible{
      transform:translateY(-4px);
      border-color:var(--accent);
      box-shadow: 0 12px 28px rgba(0,0,0,.35), 0 0 0 1px rgba(59,130,246,.25) inset;
      background:linear-gradient(180deg, rgba(20,26,42,.95), rgba(20,26,42,.85));
    }
    a.card:focus-visible{
      box-shadow: 0 12px 28px rgba(0,0,0,.35), 0 0 0 3px rgba(59,130,246,.55);
    }

    /* subtle moving sheen */
    a.card::after{
      content:""; position:absolute; inset:0; border-radius:14px; pointer-events:none;
      background: linear-gradient(120deg, transparent 30%, rgba(255,255,255,.06) 45%, transparent 60%);
      transform: translateX(-120%);
      transition: transform .6s ease;
      mix-blend-mode: screen;
    }
    a.card:hover::after{ transform: translateX(0%); }

    .thumb{
      height:120px;border-radius:10px;background:linear-gradient(160deg,rgba(14,20,40,.9),rgba(14,20,40,.75));
      display:flex;align-items:center;justify-content:center;margin-bottom:.75rem;font-weight:700;color:var(--muted);
      position:relative;overflow:hidden;
    }
    .thumb .badge{
      position:absolute;top:10px;right:10px;font-size:.85rem;color:#cbd5e1;background:var(--glass);
      border:1px solid var(--stroke);padding:.15rem .45rem;border-radius:999px
    }

    .name{font-weight:800;margin-bottom:.25rem;white-space:nowrap;overflow:hidden;text-overflow:ellipsis}
    .path{font-size:.9rem;color:var(--muted);white-space:nowrap;overflow:hidden;text-overflow:ellipsis}

    .section{margin:.5rem 0 1rem;color:var(--muted);font-size:.95rem;display:flex;align-items:center;gap:.5rem}
    .section .dot{
      width:8px;height:8px;border-radius:50%;
      background: radial-gradient(circle at 30% 30%, var(--accent), var(--accent-2));
      box-shadow: 0 0 12px rgba(59,130,246,.7);
      animation: pulse 2.2s ease-in-out infinite;
    }

    /* entry animation for cards */
    .grid a.card{opacity:0;animation: rise .45s ease forwards}
    .grid a.card:nth-child(1){animation-delay:.06s}
    .grid a.card:nth-child(2){animation-delay:.12s}
    .grid a.card:nth-child(3){animation-delay:.18s}
    .grid a.card:nth-child(4){animation-delay:.24s}
    .grid a.card:nth-child(5){animation-delay:.30s}
    .grid a.card:nth-child(6){animation-delay:.36s}
    .grid a.card:nth-child(7){animation-delay:.42s}
    .grid a.card:nth-child(8){animation-delay:.48s}

    @keyframes rise{from{transform:translateY(6px);opacity:0}to{transform:translateY(0);opacity:1}}
    @keyframes drop-in{from{transform:translateY(-10px);opacity:.0}to{transform:translateY(0);opacity:1}}
    @keyframes fade-up{from{transform:translateY(8px);opacity:.0}to{transform:translateY(0);opacity:1}}
    @keyframes pulse{
      0%,100%{filter:drop-shadow(0 0 0 rgba(59,130,246,0.0))}
      50%{filter:drop-shadow(0 0 10px rgba(139,92,246,0.6))}
    }

    /* tiny responsive tweak */
    @media (max-width:420px){
      .thumb{height:100px}
    }
  </style>
</head>
